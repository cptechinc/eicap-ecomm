<h1 class="text-danger font-weight-bold border-bottom border-primary my-4">{{ page.title }}</h1>
{% if edituser.is_admin() %}
	<div class="row mb-3">
		<div class="col">
			<a href="{{ page.parent.url }}" class="btn btn-primary">
				<i class="fa fa-arrow-left" aria-hidden="true"></i> Back to App Settings
			</a>
		</div>
		<div class="col">
			<a href="{{ page.child('name=add').url }}" class="btn btn-success float-right">
				<i class="fa fa-plus" aria-hidden="true"></i> Add Program
			</a>
		</div>
	</div>
	<div class="list-group">
        {% for program in programs %}
            {% set programID = program.name|replace({'program-':''}) %}
			<div class="list-group-item list-group-item-action">
				<h4>{{ pages.get('/config/programs/').child('name=' ~ programID).title }} ({{ programID }})</h4>
				<h5>{{ program.name }}</h5>
			</div>
		{% endfor %}
	</div>
{% else %}
	{% set title = 'Error!' %}
	{% set msg = 'You don\'t have permission to this function' %}
	{% include 'common/error-page.twig' %}
{% endif %}
